<h3>登録情報編集</h3>

<%= form_for(@customer, url:public_customer_path(@customer)) do |f| %>

       <h4>（姓）</h4>
       <%= f.text_field :last_name %>

       <h4>（名）</h4>
       <%= f.text_field :first_name %>

       <h4>（セイ）</h4>
       <%= f.text_area :last_name_kana %>

       <h4>（メイ）</h4>
       <%= f.text_area :first_name_kana %>

       <h4>郵便番号</h4>
       <%= f.text_area :postal_code %>

       <h4>住所</h4>
       <%= f.text_area :address %>

       <h4>電話番号</h4>
       <%= f.text_area :phone_number %>

       <h4>メールアドレス</h4>
       <%= f.text_area :email %>

       <%= f.submit '編集内容を保存する' %>

     <% end %>