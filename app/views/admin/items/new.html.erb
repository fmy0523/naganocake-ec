<h1>商品新規登録</h1>

<%= form_for(@item, url: admin_items_path) do |f| %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>税抜価格</h4>
  <%= f.text_field :price %>
  <h4>円</h4>

  <!-- 画像設定用 -->
  <div class="form-group has-icon">
    <div class="user-edit-image">
      <!-- attachment_image_tagで、画像を埋め込む -->
      <%= attachment_image_tag @item, :image, size: "100x100", format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </div>

    <label class="control-label sr-only" for="inputEmail"></label>
      <!-- attachment_fieldで、画像選択用のボタンを生成 -->
      <%= f.attachment_field :image, class: "user-edit-form" %>
  </div>

    <%= f.submit '新規登録' %>
<% end %>