<h2>会員編集情報編集</h2>

<p>顧客ID</p>
<p><%= @member.id %></p>

<%= form_for(@member, url: admin_member_path) do |f| %>


  <p>氏名</p>
  <!-- last_nameとfirst_nameを氏名として表示させる -->
  <%= f.text_field :last_name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"姓"%>
  <%= f.text_field :first_name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名"%>

  <p>フリガナ</p>
  <!-- last_name_kanaとfirst_name_kanaをフリガナとして表示させる -->
  <%= f.text_field :last_name_kana, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"セイ"%>
  <%= f.text_field :first_name_kana, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メイ"%>

  <p>郵便番号</p>
  <%= f.text_field :postal_code, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"郵便番号"%>

  <p>住所</p>
  <%= f.text_field :address, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"住所"%>

  <p>電話番号</p>
  <%= f.text_field :phone_number, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"電話番号"%>

  <p>メールアドレス</p>
  <%= f.text_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>

  <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>