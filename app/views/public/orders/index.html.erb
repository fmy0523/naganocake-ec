<p>注文履歴一覧</p>

<div class="container">
	  <table class="table-table-striped">
	  <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
      <!-- ログインカスタマーのオーダー -->
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.address %></td>

            <td>
              <!-- 「ログインカスタマーのオーダー」のに紐づいている「オーダーアイテム」-->
              <% order.ordered_items.each do |order_item| %>
                <%= order_item.item.name %>
              <% end %>
            </td>
          <td><%= order.total %></td>
        <td><%= link_to "注文詳細", public_order_path(order) %></td>
      </tr>
      <% end %>
    </table>
</div>